<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file %></a>
      <form  action="/<%= file  %>/edit" method="get">
        <button type="submit">Edit</button>
      </form>
      <form  action="/<%= file %>/delete" method="post">
        <button type="submit">Delete</button>
      </form>
   </li>
  <% end %>
</ul>

<a href="/new">New document</a>


